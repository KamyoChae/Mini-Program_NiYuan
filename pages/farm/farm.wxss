.comic-user {
  position: absolute;
  bottom: calc(50vh - 100rpx);
}

.user-view {
  width: 100vw;
  height: 300rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.rate-view {
  position: absolute;
  top: 0;
  transform: rotate(180deg);
}

.user-view::before, .user-view::after {
  content: "";
  display: block;
  position: absolute;
  top: -100rpx;
  
}

.user-view::after {
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
 box-shadow: inset 0 0 20rpx #fff;
  background: none;
  border: 1rpx solid #fff;
  border-radius: 50%;
  left: calc(50% - 25rpx);
  animation: move 3s infinite alternate-reverse;
}

.user-view::before {
  width: 0;
  height: 0;
  border: 20rpx solid #fff;
  border-radius: 50%;
  left: calc(50% - 20rpx);
  animation: move 3s infinite alternate-reverse 0.5s ease-in-out;
}

@keyframes move {
  0% {
    top: -60rpx;
    left: 0;
    opacity: 0.2;
  }

  10% {
    top: -150rpx;
  }

  25% {
    top: 10rpx;
  }

  35% {
    top: -200rpx;
  }

  50% {
    top: -130rpx;
    left: calc(50% - 20rpx);
    opacity: 1;
  }

  65% {
    top: 30rpx;
  }

  75% {
    top: -170rpx;
  }

  90% {
    top: 40rpx;
  }

  100% {
    left: 100%;
    opacity: 0.2;
  }
}

.user-view .middle-arc image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 1rpx dashed #353535;
  position: absolute;
  right: 0;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.user-view .userName {
  font-size: 0.8rem;
  margin: 10rpx;
}

.middle-arc {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.arc-border {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  border: 1rpx solid #fff;
  border-radius: 50%;
   box-shadow: inset 0 0 60rpx #fff;
  animation: rate 5s infinite linear;
 
}

@keyframes rate {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}

.arc-border::after {
  content: "";
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  position: absolute;
  border-radius: 50%;
  top: calc(50% - 10rpx);
}

.arc-border::after {
  right: -10rpx;
  animation: shan 2s infinite alternate-reverse ease-in-out;
}

@keyframes shan {
  0% {
    width: 20rpx;
    height: 20rpx;
    opacity: 0.2;
  }

  50% {
    width: 30rpx;
    height: 30rpx;
    right: -15rpx;
    opacity: 1;
  }

  100% {
    width: 20rpx;
    height: 20rpx;
    opacity: 0.2;
  }
}
