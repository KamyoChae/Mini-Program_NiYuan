.wellcome{
  width: 100vw;
  height: 100vh;
  text-align: center;
  box-sizing: border-box;
  position: absolute;
}

.userinfo button{
  width: 300rpx;
  font-weight: 300;
  border:1rpx solid #e41212;
  position: absolute;
  bottom: 180rpx;
  left: 0;
  right: 0;
  color: #e41212;
  background: none;
}
.userinfo button:active{
  background:#e41212; 
  color:#fff;
  opacity: .5;
}
.userinfo-avatar{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.userIcon{
  padding: 20rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  align-content: center;
  
}

.user-motto{
  color: #fff;
  opacity: 1;
  font-size: 1rem;
  line-height: 1.8rem;
  text-shadow: 1px 1px 3px #353535;

}
.usermotto{
  margin-top: 15vh;
}

.ima-bg{
  width: 100vw;
  height: 100vh;
  position: absolute;
}