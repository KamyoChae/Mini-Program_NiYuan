.menu-index {
  width: 100vw;
  margin-top: 10rpx;
}

.menu-item image {
  width: 100rpx;
  height: 100rpx;
  margin: 35rpx;
}

.menu-item {
  position: relative;
  width: 90vw;
  height: 200rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin: auto;
  border-top: 2rpx dashed #000  ;
  border-radius: 8rpx;
  background: #fff;
}
.menu-item:nth-of-type(1){
  border-top: none;
}

.menu-item::after, .menu-item::before {
  content: "";
  display: block;
  position: absolute;
  width: 0rpx;
  height: 0rpx;
  border-radius: 50%;
  border: 20rpx solid #353535;
  transform: rotate(45deg);  
  top: -20rpx;
 }

.menu-item::after {
  border-right-color: transparent;
  border-top-color: transparent;
  right: -20rpx;
   box-shadow: -10rpx 10rpx 0 5rpx #fff;
}

.menu-item::before {

  border-left-color: transparent;
  border-bottom-color: transparent;
  left: -20rpx;
   box-shadow: 10rpx -10rpx 0 5rpx #fff;
}

.menu-item:nth-of-type(1)::after, .menu-item:nth-of-type(1)::before{
  opacity: 0;
}

.menu-item view {
  display: inline-block;
  vertical-align: top;
}

.items-text {
  font-size: 0.8rem;
}

.about {
  font-size: 0.65rem;
  color: #888;
  display: block;
}
