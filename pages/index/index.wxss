}

.swiper-view {
  width: 100vw;
  height: 23vh;
  overflow: hidden;
}

.index {
  width: 100vw;
  min-height: 100vh;
  background: #353535;
  position: absolute;
  margin-bottom: 30rpx;
}

.swiper-view .border-view {
  width: 95vw;
  height: 20vh;
  margin: auto;
  border-radius: 8rpx;
  margin-top: 10rpx;
  position: relative;
  background: #fff;
}

/*swiper*/

.swiper-view .border-view::after, .swiper-view .border-view::before {
  content: "";
  display: block;
  position: absolute;
  width: 0rpx;
  height: 0rpx;
  border-radius: 50%;
  border: 20rpx solid #454545;
  transform: rotate(45deg);
  top: calc(50% - 20rpx);
}

.swiper-view  .border-view::after {
  border-right-color: transparent;
  border-top-color: transparent;
  right: -20rpx;
}

.swiper-view  .border-view::before {
  border-left-color: transparent;
  border-bottom-color: transparent;
  left: -20rpx;
}

.en-text {
  height: 100%;
  box-sizing: border-box;
  padding: 2em;
  font-weight: 200;
  font-size: 0.7rem;
}

.en-text text {
  display: block;
  margin-bottom: 1em;
}

